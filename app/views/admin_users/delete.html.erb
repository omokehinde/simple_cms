<% @page_title = "Delete #{@admin_user.username}" %>

<%= link_to("<< Back to List", admin_users_path, :class => 'back-link')%>

<div class="admin_users delete">
  <h2>Delete User</h2>

  <%= form_for(@admin_user, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this user?</p>

    <p class="reference-name"><%= f.object.username %></p>

    <div class="form-buttons">
      <%= f.submit("Delete User") %>
    </div>

  <% end %>
</div>
